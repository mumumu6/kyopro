  "clangd.arguments": [
    "--background-index=false", // バックグラウンドで全ファイルを自動インデックスしない
    "--header-insertion=never", // 自動補完時にヘッダを挿入しない（軽くなる）
    "--completion-style=detailed", // 補完の情報は詳細（好みでsimpleでも）
    "--pch-storage=memory" // PCH（プリコンパイル済みヘッダ）をメモリに保持して高速化
